@page
@model MovieLand.Web.Pages.Compare.CompareModel
@{
    ViewData["Title"] = "Compare";
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CompareViewModel.Movies.First().PictureUri)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompareViewModel.Movies.First().Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompareViewModel.Movies.First().Summary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompareViewModel.Movies.First().ReleaseYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompareViewModel.Movies.First().Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompareViewModel.Movies.First().UnitPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model.CompareViewModel.Movies)
        {
            <tr>
                <td>
                    <a asp-page="/Movies/MovieDetail" asp-route-slug="@movie.Slug">
                        <img src="@Html.DisplayFor(modelItem => movie.PictureUri)" alt="Movie image" style="width: 300px; height: 400px;" />
                    </a>
                </td>
                <td>
                    <a asp-page="/Movies/MovieDetail" asp-route-slug="@movie.Slug">@Html.DisplayFor(modelItem => movie.Title)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => movie.Summary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => movie.ReleaseYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => movie.Duration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => movie.UnitPrice)
                </td>
                <td>
                    <a asp-page="/Movies/MovieDetail" asp-route-slug="@movie.Slug">Movie Details</a> |
                    <form asp-page-handler="RemoveFromCompare" method="post">
                        <a href="javascript:;" onclick="parentNode.submit();">Remove From Compare</a>
                        <input type="hidden" asp-for="@Model.CompareViewModel.Id" name="compareId" />
                        <input type="hidden" asp-for="@movie.Id" name="movieId" />
                    </form> |
                    <a asp-page="./Cart/AddToCart" asp-route-id="@movie.Id">Add To Cart</a> |
                    <form asp-page="/Index" asp-page-handler="AddToFavorites" method="post">
                        <a href="javascript:;" onclick="parentNode.submit();">Add to Favorites</a>
                        <input type="hidden" asp-for="@movie.Id" name="movieId" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>