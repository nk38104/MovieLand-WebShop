<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MovieLand</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" type="text/css" media="screen" runat="server" asp-append-version="true"/>
    @*<link rel="stylesheet" type="text/css" href="@Url.Content("~/css/site.css")" asp-append-version="true"/>*@
</head>
<body>
    <div class="super_container">
        <!-- Header -->
        <header class="header mb-5">
            <!-- Top Bar -->
            <div class="top_bar">
                <div class="container">
                    <div class="row">
                        <div class="col d-flex flex-row">
                            <div class="top_bar_contact_item">
                                <div class="top_bar_icon"><img src="https://res.cloudinary.com/dxfq3iotg/image/upload/v1560918577/phone.png" alt=""></div>(+385)91 1234 567 890
                            </div>
                            <div class="top_bar_contact_item">
                                <div class="top_bar_icon"><img src="https://res.cloudinary.com/dxfq3iotg/image/upload/v1560918597/mail.png" alt=""></div><a href="mailto:fastsales@gmail.com">movieland@gmail.com</a>
                            </div>
                            <div class="top_bar_content ml-auto">
                                <div class="top_bar_user">
                                    <partial name="_LoginPartial" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!-- Header Main -->
            <div class="header_main">
                <div class="container">
                    <div class="row">
                        <!-- Logo -->
                        <div class="col-lg-2 col-sm-3 col-3 order-1">
                            <div class="logo_container">
                                <div class="logo"><a asp-area="" asp-page="/Index">MovieLand</a></div>
                            </div>
                        </div>
                         <!-- Features -->
                        <div class="col-lg-10 col-9 order-lg-3 order-2 text-lg-left text-right">
                            <partial name="_FeaturePartial" />
                        </div>
                    </div>
                </div>
            </div> <!-- Main Navigation -->
            <nav class="main_nav">
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <div class="main_nav_content d-flex flex-row justify-content-center">
                                <!-- Main Nav Menu -->
                                <div class="main_nav_menu">
                                    <ul class="standard_dropdown main_nav_dropdown">
                                        <li><a asp-area="" asp-page="/Index">Home</a></li>
                                        <li class="hassubs"> <a asp-area="" asp-page="/AboutUs/AboutUs">About Us</a></li>
                                        <li class="hassubs"> <a asp-area="" asp-page="/ContactUs/ContactUs">Contact Us</a></li>
                                    </ul>
                                </div> <!-- Menu Trigger -->
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - MovieLand.Web - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" runat="server" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
