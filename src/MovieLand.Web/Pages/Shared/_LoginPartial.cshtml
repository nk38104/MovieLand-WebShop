@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Http;

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <div>
        <img class="user_icon" src="https://res.cloudinary.com/dxfq3iotg/image/upload/v1560918647/user.svg" alt="">
        Hello, <span class="mr-2 d-none d-lg-inline text-gray-600">@UserManager.GetUserName(User)</span>
    </div>

    <div>
        <form id="logoutForm" class="form-inline" asp-area="" asp-page="/Account/Login" asp-page-handler="Logout" method="post">
            <a onclick="$(this).closest('form').submit()" class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                <i class="las la-sign-out-alt la-sm la-fw mr-2 text-gray-400"></i>
                Logout
            </a>
        </form>
    </div>
}
else
{
    <div class="user_icon"><img src="https://res.cloudinary.com/dxfq3iotg/image/upload/v1560918647/user.svg" alt=""></div>
    <div><a asp-area="" asp-page="/Account/Register">Register</a></div>
    <div><a asp-area="" asp-page="/Account/Login">Login</a></div>
}
