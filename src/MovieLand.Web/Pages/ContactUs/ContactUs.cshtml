@page
@model MovieLand.Web.Pages.ContactUs.ContactUsModel
@{
    ViewData["Title"] = "Contact us";
}

<div class="contact3 py-5">
    <div class="row no-gutters">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="card-shadow">
                        <img src="https://images.unsplash.com/20/bw-room.JPG?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" class="img-fluid">
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="contact-box ml-3">
                        <h1 class="font-weight-light mt-2">Quick Contact</h1>
                        <form class="mt-4" method="post">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label asp-for="@Model.Contact.Name" class="control-label"></label>
                                        <input asp-for="@Model.Contact.Name" class="form-control" placeholder="Enter your full name..."/>
                                        <span asp-validation-for="@Model.Contact.Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label asp-for="@Model.Contact.Email" class="control-label"></label>
                                        <input asp-for="@Model.Contact.Email" class="form-control" placeholder="Enter your e-mail adress..." />
                                        <span asp-validation-for="@Model.Contact.Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label asp-for="@Model.Contact.Subject" class="control-label"></label>
                                        <input asp-for="@Model.Contact.Subject" class="form-control" placeholder="Enter message subject..." />
                                        <span asp-validation-for="@Model.Contact.Subject" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label asp-for="@Model.Contact.Message" class="control-label"></label>
                                        <textarea asp-for="@Model.Contact.Message" class="form-control" placeholder="Enter your message here..."></textarea>
                                        <span asp-validation-for="@Model.Contact.Message" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <button type="submit" class="btn btn-danger-gradiant mt-3 text-white border-0 px-3 py-2"><span> SUBMIT </span></button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="card mt-4 border-0 mb-4">
                        <div class="row">
                            <div class="col-lg-4 col-md-4">
                                <div class="card-body d-flex align-items-center c-detail pl-0">
                                    <div class="mr-3 align-self-center">
                                        <img src="https://www.wrappixel.com/demos/ui-kit/wrapkit/assets/images/contact/icon1.png">
                                    </div>
                                    <div class="">
                                        <h6 class="font-weight-medium">Address</h6>
                                        <p class="">
                                            5 Kopilica
                                            <br> Split, Croatia
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4">
                                <div class="card-body d-flex align-items-center c-detail">
                                    <div class="mr-3 align-self-center">
                                        <img src="https://www.wrappixel.com/demos/ui-kit/wrapkit/assets/images/contact/icon2.png">
                                    </div>
                                    <div class="">
                                        <h6 class="font-weight-medium">Phone</h6>
                                        <p class="">
                                            251 546 9442
                                            <br> (+385)91 1234 567 890
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4">
                                <div class="card-body d-flex align-items-center c-detail">
                                    <div class="mr-3 align-self-center">
                                        <img src="https://www.wrappixel.com/demos/ui-kit/wrapkit/assets/images/contact/icon3.png">
                                    </div>
                                    <div class="">
                                        <h6 class="font-weight-medium">Email</h6>
                                        <p class="">
                                            movieland@gmail.com
                                            <br> support@movieland.com
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>