@page
@model MovieLand.Web.Pages.Admin.Genres.IndexModel

@{
    ViewData["Title"] = "Admin - Genres";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Genres</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <tbody>
        @foreach (var genre in Model.Genres) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => genre.Name)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@genre.Id">Edit</a> |
                        <a asp-page="./Delete" asp-route-id="@genre.Id">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
