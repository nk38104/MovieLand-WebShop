@page
@model MovieLand.Web.Pages.Admin.Movies.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h3>Movie</h3>
    <hr />
    <div class="row p-3 bg-white border rounded mb-4 h-auto shadow-sm" style="width: 130%;">
        <div class="col-md-3">
            <img class="rounded w-100" src="@Html.DisplayFor(modelItem => Model.Movie.PictureUri)" />
        </div>
        <div class="col-md-6 mt-2">
            <h4><a asp-page="/Movies/MovieDetail" asp-route-slug="@Model.Movie.Slug">@Html.DisplayFor(modelItem => Model.Movie.Title)</a></h4>
            <div class="d-flex flex-row">
                <div>@Html.DisplayFor(modelItem => Model.Movie.Duration) min</div>
            </div>
            <div class="ratings mr-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="yellow" class="bi bi-star-fill" viewBox="0 0 16 16">
                    <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                </svg>
                <span>@Html.DisplayFor(modelItem => Model.Movie.Rate)</span>
            </div>
            <p class="text-justify summary mb-0">
                <br><br>
                @Html.DisplayFor(modelItem => Model.Movie.Summary)
            </p>
        </div>
        <div class="align-items-center align-content-center col-md-3 border-left mt-1">
            <div class="d-flex flex-row">
                <h3 class="mr-1">$@Html.DisplayFor(modelItem => Model.Movie.UnitPrice)</h3>
            </div>
        </div>
    </div>

    <form method="post">
        <input type="hidden" asp-for="Movie.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="../../Index">Back to List</a>
    </form>
</div>
