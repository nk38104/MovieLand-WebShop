@page
@model MovieLand.Web.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}


<div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
            <div class="col-lg-12">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                    </div>
                    <form class="user" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            <input asp-for="@Model.LoginViewModel.Username" class="form-control form-control-user" aria-describedby="emailHelp" placeholder="Enter username or email...">
                            <span asp-validation-for="@Model.LoginViewModel.Username" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="@Model.LoginViewModel.Password" type="password" class="form-control form-control-user" placeholder="Enter password...">
                            <span asp-validation-for="@Model.LoginViewModel.Password" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary btn-user btn-block">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
