@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@* --- SEARCH ---*@
<div>
    <form>
        <p>
            <input type="text" asp-for="SearchString" placeholder="Search movie by title..."/>
            <input type="submit" value="Search" />
        </p>
    </form>
    <hr>
</div>

@* --- FILTERING SIDEBAR AND MOVIES *@
<div class="row">
    <aside class="col-md-3" style="transform: translate(-100%)">
        <div class="card">
            <article class="card-group-item">
                <header class="card-header">
                    <h6 class="title">Price range</h6>
                </header>
                <div class="filter-content">
                    <div class="card-body">
                        <div class="form-row">
                            <form asp-page-handler="FilterByPrice" method="post">
                                <label>Min</label>
                                <input type="number" class="form-control" name="priceFrom" placeholder="0" />
                                <label>Max</label>
                                <input type="number" class="form-control" name="priceTo" placeholder="..." />
                                <br />
                                <input type="submit" value="Filter" />
                            </form>
                        </div>
                    </div> <!-- card-body.// -->
                </div>
            </article> <!-- card-group-item.// -->
            <article class="card-group-item">
                <header class="card-header">
                    <h6 class="title">Directors</h6>
                </header>
                <div class="filter-content">
                    <div class="card-body">
                        <div class="custom-control">
                            @foreach (var director in Model.Directors)
                            {
                                <form asp-page-handler="FilterByDirector" method="post">
                                    <a href="javascript:;" onclick="parentNode.submit();">@director.Name</a>
                                    <input type="hidden" asp-for="@director.Name" name="director" />
                                </form>
                            }
                        </div> <!-- form-check.// -->
                    </div> <!-- card-body.// -->
                </div>
            </article> <!-- card-group-item.// -->
            <article class="card-group-item">
                <header class="card-header">
                    <h6 class="title">Genres</h6>
                </header>
                <div class="filter-content">
                    <div class="card-body">
                        <div class="custom-control">
                            @foreach (var genre in Model.Genres)
                            {
                                <form asp-page-handler="FilterByGenre" method="post">
                                    <a href="javascript:;" onclick="parentNode.submit();">@genre.Name</a>
                                    <input type="hidden" asp-for="@genre.Name" name="genre" />
                                </form>
                            }
                        </div> <!-- form-check.// -->
                    </div> <!-- card-body.// -->
                </div>
            </article> <!-- card-group-item.// -->
            <article class="card-group-item">
                <header class="card-header">
                    <h6 class="title">Rating</h6>
                </header>
                <div class="filter-content">
                    <div class="card-body">
                        <div class="custom-control">
                            <form asp-page-handler="FilterByRating" method="post">
                                <input type="range" name="rating" min="0" max="5" step="0.1" value="0" oninput="this.nextElementSibling.value = this.value">
                                <output>0</output>
                                <input type="submit" value="Filter" />
                            </form>
                        </div> <!-- form-check.// -->
                    </div> <!-- card-body.// -->
                </div>
            </article> <!-- card-group-item.// -->
        </div> <!-- card.// -->
    </aside> <!-- col.// -->
    <aside class="col-md-9" style="transform: translate(-30%)">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Movies.First().PictureUri)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Movies.First().Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Movies.First().Summary)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Movies.First().ReleaseYear)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Movies.First().Duration)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Movies.First().UnitPrice)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model.Movies)
                {
                    <tr>
                        <td>
                            <a asp-page="/Movies/MovieDetail" asp-route-slug="@movie.Slug">
                                <img src="@Html.DisplayFor(modelItem => movie.PictureUri)" alt="Movie image" style="width: 300px; height: 400px;" />
                            </a>
                        </td>
                        <td>
                            <a asp-page="/Movies/MovieDetail" asp-route-slug="@movie.Slug">@Html.DisplayFor(modelItem => movie.Title)</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => movie.Summary)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => movie.ReleaseYear)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => movie.Duration)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => movie.UnitPrice)
                        </td>
                        <td>
                            <a asp-page="/Movies/MovieDetail" asp-route-slug="@movie.Slug">Movie Details</a> |
                            <form asp-page-handler="AddToCompare" method="post">
                                <a href="javascript:;" onclick="parentNode.submit();">Add To Compare</a> |
                                <input type="hidden" asp-for="@movie.Id" name="movieId" />
                            </form>
                            <form asp-page-handler="AddToCart" method="post">
                                <a href="javascript:;" onclick="parentNode.submit();">Add To Cart</a> |
                                <input type="hidden" asp-for="@movie.Id" name="movieId" />
                            </form>
                            <form asp-page-handler="AddToFavorites" method="post">
                                <a href="javascript:;" onclick="parentNode.submit();">Add To Favorites</a>
                                <input type="hidden" asp-for="@movie.Id" name="movieId" />
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </aside> <!-- col.// -->
</div> <!-- row.// -->